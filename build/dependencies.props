<Project>
  <PropertyGroup Label="SDK Versions">
    <NetStandardTargetVersion>netstandard2.0</NetStandardTargetVersion>
    <NetCoreTargetVersion>netcoreapp3.0</NetCoreTargetVersion>
    <LangVersion>preview</LangVersion>
  </PropertyGroup>

  <PropertyGroup Label="Package information">
    <PackageProjectUrl>https://github.com/lurumad/core-flash</PackageProjectUrl>
    <RepositoryUrl>https://github.com/lurumad/core-flash</RepositoryUrl>
    <Authors>Luru</Authors>
    <Company>Luru</Company>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>true</AllowedOutputExtensionsInPackageBuildOutputFolder>
  </PropertyGroup>

  <PropertyGroup Label="Core.Flash Versions">
    <coreflash>2.1.1$(VersionSuffix)</coreflash>
  </PropertyGroup>
  
  <PropertyGroup Label="Package Dependencies">
    <MicrosoftAspNetCoreMvcViewFeatures>2.2.0</MicrosoftAspNetCoreMvcViewFeatures>
    <MicrosoftAspNetCoreRazorRuntime>2.2.0</MicrosoftAspNetCoreRazorRuntime>
    <MicrosoftExtensionsDependencyInjection>3.0.0</MicrosoftExtensionsDependencyInjection>
    <NewtonsoftJson>12.0.2</NewtonsoftJson>
  </PropertyGroup>

</Project>